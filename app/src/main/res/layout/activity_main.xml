<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="411dp"
            android:layout_height="783dp" app:srcCompat="@drawable/jaden1"
            android:id="@+id/backgroundImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#000000" android:scaleType="fitStart" app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:text="@string/title"
            android:layout_width="274dp"
            android:layout_height="88dp"
            android:id="@+id/titleTxt" android:textSize="24sp"
            android:textAlignment="center" android:textStyle="bold" android:textColor="#9C27B0"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/backgroundImage"
            android:background="#ABFFFFFF" android:layout_marginTop="100dp"/>
    <EditText
            android:layout_width="245dp"
            android:layout_height="81dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTxt"
            app:layout_constraintEnd_toEndOf="@+id/backgroundImage" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/backgroundImage" android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/titleTxt" app:layout_constraintHorizontal_bias="0.477"
            android:hint="@string/hint"/>
    <TextView
            android:layout_width="370dp"
            android:layout_height="183dp"
            android:id="@+id/resultTxt"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundImage" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="96dp"
            app:layout_constraintHorizontal_bias="0.489" android:textSize="24sp" android:textColor="#FFEB3B"
            android:fontFamily="monospace" android:lineSpacingExtra="8sp" android:textAlignment="center"
            android:typeface="monospace"/>
    <Button
            android:text="@string/button"
            android:layout_width="344dp"
            android:layout_height="33dp"
            android:id="@+id/convertBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.486" app:layout_constraintTop_toBottomOf="@+id/editTxt"
            android:layout_marginTop="60dp" android:background="#5BE91E63" android:textSize="18sp"
            android:textStyle="bold" android:onClick="toJadenCase"/>
</android.support.constraint.ConstraintLayout>